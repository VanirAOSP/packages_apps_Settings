<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/themes_settings_title" >

    <PreferenceCategory
        android:title="@string/lockscreen_targets_title"
        android:key="lockscreen_general_category" >

        <Preference
            android:fragment="com.android.settings.cyanogenmod.LockscreenTargets"
            android:key="lockscreen_targets"
            android:summary="@string/lockscreen_target_summary"
            android:title="@string/lockscreen_target_title" />

        <PreferenceScreen
            settings:excludeFromSearch="true"
            android:fragment="com.android.settings.cyanogenmod.LockscreenButtons"
            android:key="lockscreen_buttons"
            android:title="@string/lockscreen_buttons_title"
            android:summary="@string/lockscreen_buttons_summary" />

        <CheckBoxPreference
            android:key="lockscreen_modlock_enabled"
            android:title="@string/lockscreen_enable_modlock_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/lockscreen_widgets_category_title"
        android:key="lockscreen_widgets_category" >

        <CheckBoxPreference
            android:key="keyguard_enable_widgets"
            android:title="@string/lockscreen_custom_widgets_title"
            android:summary="@string/lockscreen_custom_widgets_summary" />

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="lockscreen_maximize_widgets"
            android:summary="@string/lockscreen_maximize_widgets_summary"
            android:title="@string/lockscreen_maximize_widgets_title" />

        <CheckBoxPreference
            android:key="keyguard_enable_camera"
            android:title="@string/lockscreen_enable_camera_title" />

        <CheckBoxPreference
            android:key="lockscreen_music_controls"
            android:persistent="false"
            android:title="@string/lockscreen_music_controls_title"
            android:summary="@string/lockscreen_music_controls_summary" />

        <CheckBoxPreference
                android:key="keyguard_enable_application_widget"
                android:title="@string/lockscreen_enable_application_widget_title"
                android:summary="@string/lockscreen_application_widget_summary" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="lockscreen_background"
            android:title="@string/lockscreen_background">

        <Preference
            android:key="lockscreen_wallpaper_settings"
            android:title="@string/lockscreen_wallpaper_settings_title">
            <intent android:targetPackage="com.android.wallpapercropper"
                    android:targetClass="com.android.wallpapercropper.LockWallpaperPickerActivity" />
        </Preference>

       <CheckBoxPreference
            android:key="see_through"
            android:title="@string/see_through_title"
            android:summary="@string/see_through_summary" />

        <CheckBoxPreference
            android:key="blur_behind"
            android:title="@string/blur_behind_title"
            android:summary="@string/blur_behind_summary" />

        <SeekBarPreference
            android:key="blur_radius"
            android:title="@string/blur_radius_title"
            android:summary="@string/blur_radius_summary"
            android:max="25"
            android:defaultValue="12" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/misc_short"
        android:key="lockscreen_misc">

        <ListPreference
            android:key="lockscreen_battery_status"
            android:persistent="false"
            android:dialogTitle="@string/lockscreen_battery_status_title"
            android:title="@string/lockscreen_battery_status_title"
            android:entries="@array/lockscreen_battery_status_entries"
            android:entryValues="@array/lockscreen_battery_status_values"
            android:defaultValue="0" />

        <CheckBoxPreference
            android:key="allow_rotation"
            android:title="@string/allow_rotate_title"
            android:summary="@string/allow_rotate_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="allow_power_menu"
            android:title="@string/allow_power_menu_title"
            android:summary="@string/allow_power_menu_summary"
            android:defaultValue="true" />

    </PreferenceCategory>
</PreferenceScreen>
