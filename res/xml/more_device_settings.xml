<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/more_device_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="supported_hardware_preferences"
        android:title="@string/supported_hardware_preferences" />

    <Preference
        android:key="buttons_navigation"
        android:fragment="com.android.settings.vanir.ButtonNavigation"
        android:title="@string/button_navigation_title" />

    <PreferenceScreen
        settings:includeXmlForSearch="@xml/button_settings"
        android:id="@+id/button_settings"
        android:fragment="com.android.settings.cyanogenmod.ButtonSettings"
        android:title="@string/button_settings" />

    <Preference
        settings:includeXmlForSearch="@xml/performance_settings"
        android:id="@+id/performance_settings"
        android:fragment="com.android.settings.cyanogenmod.PerformanceSettings"
        android:title="@string/performance_settings_title" />


    <CheckBoxPreference
        android:key="fast_charge"
        android:title="@string/fast_charge_title"
        android:summary="@string/fast_charge_summary"
        android:persistent="true" />

    <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
        android:key="proximity_on_wake"
        android:title="@string/proximity_wake_title"
        android:summary="@string/proximity_wake_summary"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="double_tap_wake_gesture"
        android:title="@string/double_tap_to_wake_title"
        android:defaultValue="false" />

    <!-- Device Specific Touchscreen gestures. Avoid duplicating CMHW functionality, please -->
    <Preference
        android:key="touch_screen_gesture_settings">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_TOUCHSCREEN_GESTURE_SETTINGS"
            android:targetPackage="com.cyanogenmod.settings.device"
            android:targetClass="com.cyanogenmod.settings.device.TouchscreenGestureSettings" />
    </Preference>

    <PreferenceCategory
        android:key="sensors_motors_category"
        android:title="@string/sensors_motors_title" >

        <com.android.settings.hardware.VibratorIntensity
            android:key="vibration_intensity"
            android:title="@string/vibrator_intensity_title"
            android:dialogTitle="@string/vibrator_intensity_title"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="display_calibration_category"
        android:title="@string/display_calibration_title" >

        <CheckBoxPreference
                android:key="sunlight_enhancement"
                android:title="@string/sunlight_enhancement_title"
                android:summary="@string/sunlight_enhancement_summary"
                android:defaultValue="false" />

        <CheckBoxPreference
                android:key="color_enhancement"
                android:title="@string/color_enhancement_title"
                android:summary="@string/color_enhancement_summary"
                android:defaultValue="true" />

        <PreferenceScreen
            android:persistent="false"
            android:key="screencolor_settings"
            android:title="@string/screencolor">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.settings"
                android:targetClass="com.android.settings.ScreenColorSettings" />
        </PreferenceScreen>

       <com.android.settings.hardware.DisplayColor
                android:key="color_calibration"
                android:title="@string/color_calibration_title"
                android:dialogTitle="@string/color_calibration_title"
                android:summary="@string/color_calibration_summary"
                android:persistent="false" />

        <com.android.settings.hardware.DisplayGamma
                android:key="gamma_tuning"
                android:title="@string/gamma_tuning_title_head"
                android:dialogTitle="@string/gamma_tuning_title_head"
                android:summary="@string/gamma_tuning_summary_head"
                android:persistent="false" />

        <CheckBoxPreference
                android:key="adaptive_backlight"
                android:title="@string/adaptive_backlight_title"
                android:summary="@string/adaptive_backlight_summary"
                android:defaultValue="true" />

        <!-- DeviceParts Device Specific Display settings -->
        <Preference
            android:key="advanced_display_settings"
            android:title="@string/advanced_settings_title">
            <intent
                android:action="com.cyanogenmod.action.LAUNCH_DEVICE_SETTINGS"
                android:targetPackage="com.cyanogenmod.settings.device"
                android:targetClass="com.cyanogenmod.settings.device.DisplaySettings" />
        </Preference>

    </PreferenceCategory>
</PreferenceScreen>
